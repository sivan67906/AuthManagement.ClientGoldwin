    private async Task HandleSubmit(RoleDepartmentMappingFormDialog.MappingFormModel model)
    {
        _isSaving = true;
        try
        {
            var roleId = Guid.Parse(model.RoleId);
            var departmentId = Guid.Parse(model.DepartmentId);

            if (_isEditMode && _selectedMapping != null)
            {
                var updateRequest = new UpdateRoleDepartmentMappingRequest
                    {
                        Id = _selectedMapping.Id,
                        RoleId = roleId,
                        DepartmentId = departmentId,
                        IsPrimary = model.IsPrimary
                    };

                var response = await RBACService.UpdateRoleDepartmentMappingAsync(_selectedMapping.Id, updateRequest);
                if (response.Success)
                {
                    Snackbar.Add("Role department mapping updated successfully", Severity.Success);
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to update role department mapping", Severity.Error);
                }
            }
            else
            {
                var createRequest = new CreateRoleDepartmentMappingRequest
                    {
                        RoleId = roleId,
                        DepartmentId = departmentId,
                        IsPrimary = model.IsPrimary
                    };

                var response = await RBACService.CreateRoleDepartmentMappingAsync(createRequest);
                if (response.Success)
                {
                    Snackbar.Add("Role department mapping created successfully", Severity.Success);
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to create role department mapping", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving role department mapping");
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private async Task DeleteMapping(RoleDepartmentMappingDto mapping)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation",
                "Delete Role Department Mapping",
                $"Are you sure you want to delete the mapping between role '{mapping.RoleName}' and department '{mapping.DepartmentName}'? This action cannot be undone.");

            if (confirmed)
            {
                var response = await RBACService.DeleteRoleDepartmentMappingAsync(mapping.Id);
                if (response.Success)
                {
                    Snackbar.Add("Role department mapping deleted successfully", Severity.Success);
                    await LoadData();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to delete role department mapping", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting role department mapping");
            Snackbar.Add($"Error deleting role department mapping: {ex.Message}", Severity.Error);
        }
    }
