@page "/two-factor-login"
@using AuthManagement.Models
@using AuthManagement.Services
@using System.Net.Http.Json
@inject HttpClient Http
@inject JwtAuthenticationStateProvider AuthProvider
@inject NavigationManager Nav
@inject IJSRuntime JS
@layout AuthLayout
@implements IAsyncDisposable

<div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner py-6">
        <!-- Two Step Verification -->
        <div class="card">
            <div class="card-body">
                <!-- Logo -->
                <div class="app-brand justify-content-center mb-6">
                    <a href="/" class="app-brand-link">
                        <span class="app-brand-logo demo">
                            <span class="text-primary">
                                <svg width="32" height="22" viewBox="0 0 32 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.00172773 0V6.85398C0.00172773 6.85398 -0.133178 9.01207 1.98092 10.8388L13.6912 21.9964L19.7809 21.9181L18.8042 9.88248L16.4951 7.17289L9.23799 0H0.00172773Z" fill="currentColor"></path>
                                    <path opacity="0.06" fill-rule="evenodd" clip-rule="evenodd" d="M7.69824 16.4364L12.5199 3.23696L16.5541 7.25596L7.69824 16.4364Z" fill="#161616"></path>
                                    <path opacity="0.06" fill-rule="evenodd" clip-rule="evenodd" d="M8.07751 15.9175L13.9419 4.63989L16.5849 7.28475L8.07751 15.9175Z" fill="#161616"></path>
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M7.77295 16.3566L23.6563 0H32V6.88383C32 6.88383 31.8262 9.17836 30.6591 10.4057L19.7824 22H13.6938L7.77295 16.3566Z" fill="currentColor"></path>
                                </svg>
                            </span>
                        </span>
                        <span class="app-brand-text demo text-heading fw-bold">Auth System</span>
                    </a>
                </div>
                <!-- /Logo -->
                <h4 class="mb-1">Two Step Verification ðŸ’¬</h4>
                <p class="mb-6">
                    We sent a verification code to your mobile. Enter the code from the E-mail in the field below.
                    <span class="fw-medium d-block mt-1">******1234</span>
                </p>

                <EditForm Model="model" OnValidSubmit="HandleVerify" class="mb-4">
                    <p class="mb-2">Type your 6 digit security code</p>
                    <div class="d-flex gap-2 mb-6" >
                        <input @ref="box1" type="text" maxlength="1" class="form-control text-center"
                               @bind="digit1" @oninput='(e) => MoveNext(e, box2)' @onkeydown='(e) => MovePrev(e, 1)' autofocus>

                        <input @ref="box2" type="text" maxlength="1" class="form-control text-center"
                               @bind="digit2" @oninput='(e) => MoveNext(e, box3)' @onkeydown='(e) => MovePrev(e, 2)'>

                        <input @ref="box3" type="text" maxlength="1" class="form-control text-center"
                               @bind="digit3" @oninput='(e) => MoveNext(e, box4)' @onkeydown='(e) => MovePrev(e, 3)'>

                        <input @ref="box4" type="text" maxlength="1" class="form-control text-center"
                               @bind="digit4" @oninput='(e) => MoveNext(e, box5)' @onkeydown='(e) => MovePrev(e, 4)'>

                        <input @ref="box5" type="text" maxlength="1" class="form-control text-center"
                               @bind="digit5" @oninput='(e) => MoveNext(e, box6)' @onkeydown='(e) => MovePrev(e, 5)'>

                        <input @ref="box6" type="text" maxlength="1" class="form-control text-center"
                               @bind="digit6" @oninput='(e) => MoveNext(e, null)' @onkeydown='(e) => MovePrev(e, 6)'>
                    </div>

              
                    <button class="btn btn-primary d-flex w-100 mb-6" type="submit" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Verifying...</span>
                        }
                        else
                        {
                            <span>Verify my account</span>
                        }
                    </button>
                </EditForm>

                <p class="text-center">
                    Didn't get the code? <a href="javascript:void(0);" @onclick="ResendCode">Resend</a>
                </p>
            </div>
        </div>
        <!-- /Two Step Verification -->
    </div>
</div>

@code {
    private TwoFactorModel model = new();
    private string? message;
    private bool isLoading;
    private string digit1 = "";
    private string digit2 = "";
    private string digit3 = "";
    private string digit4 = "";
    private string digit5 = "";
    private string digit6 = "";

    ElementReference box1, box2, box3, box4, box5, box6;

    // Auto move to next box
    private async Task MoveNext(ChangeEventArgs e, ElementReference? nextBox)
    {
        var value = e.Value?.ToString();

        if (!string.IsNullOrEmpty(value) && value.Length == 1 && nextBox.HasValue)
            await nextBox.Value.FocusAsync();
    }

    // Backspace logic
    private async Task MovePrev(KeyboardEventArgs e, int index)
    {
        if (e.Key != "Backspace") return;

        switch (index)
        {
            case 1: digit1 = ""; break;
            case 2: digit2 = ""; break;
            case 3: digit3 = ""; break;
            case 4: digit4 = ""; break;
            case 5: digit5 = ""; break;
            case 6: digit6 = ""; break;
        }

        StateHasChanged(); // refresh UI

        // Move focus to previous ONLY if not first
        if (index > 1)
        {
            var prev = index switch
            {
                2 => box1,
                3 => box2,
                4 => box3,
                5 => box4,
                6 => box5,
                _ => box1
            };

            await prev.FocusAsync();
        }
    }


    private class TwoFactorModel
    {
        public string Code { get; set; } = string.Empty;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/main.js", true);
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/popular.js", true);
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/bootstrap5.js", true);
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/auto-focus.js", true);
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/pages-auth.js", true);
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);

        }
        await JS.InvokeVoidAsync("eval", "typeof initPagesAuth === 'function' && initPagesAuth();");
    }

    public async ValueTask DisposeAsync()
    {
        await JS.InvokeVoidAsync("eval", "window.destroyPagesAuth && window.destroyPagesAuth();");
    }

    private void MoveFocus()
    {
        // This would ideally handle automatic focus movement between inputs
        // For now, the user can manually move between inputs
    }

    private async Task HandleVerify()
    {
        model.Code = $"{digit1}{digit2}{digit3}{digit4}{digit5}{digit6}";

        if (model.Code.Length != 6)
        {
            message = "Please enter all 6 digits.";
            await JS.InvokeVoidAsync("showToast", "error", message);

            return;
        }

        isLoading = true;
        message = null;

        try
        {
            var response = await Http.PostAsJsonAsync("/auth/2fa/verify", model);
            var result = await response.Content.ReadFromJsonAsync<ApiResponse<object>>();

            if (response.IsSuccessStatusCode && result?.Success == true)
            {
                await AuthProvider.SetTwoFactorVerifiedAsync(true);
                Nav.NavigateTo("/");
            }
            else
            {
                // Check if there are errors in the response
                if (result?.Errors != null && result.Errors.Count > 0)
                {
                    // Loop through all errors and combine them
                    var errorMessages = new List<string>();
                    foreach (var error in result.Errors)
                    {
                        errorMessages.Add(error);
                    }
                    message = string.Join(", ", errorMessages);
                }
                else
                {
                    message = result?.Message ?? "Invalid code. Please try again.";
                }
                await JS.InvokeVoidAsync("showToast", "error", message);

            }
        }
        catch (Exception)
        {
            message = "An error occurred. Please try again.";
            await JS.InvokeVoidAsync("showToast", "error", message);

        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ResendCode()
    {
        try
        {
            var response = await Http.PostAsync("/auth/resend-2fa", null);
            var result = await response.Content.ReadFromJsonAsync<ApiResponse<object>>();

            if (response.IsSuccessStatusCode && result?.Success == true)
            {
                message = "Code resent successfully!";
                await JS.InvokeVoidAsync("showToast", "success", message);

                await Task.Delay(3000);
                message = null;
            }
        }
        catch (Exception)
        {
            message = "Failed to resend code.";
            await JS.InvokeVoidAsync("showToast", "error", message);

        }
    }
}
