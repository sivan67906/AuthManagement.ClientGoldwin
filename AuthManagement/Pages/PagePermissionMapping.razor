    private async Task HandleSubmit(PagePermissionMappingFormDialog.MappingFormModel model)
    {
        _isSaving = true;
        try
        {
            var pageId = Guid.Parse(model.PageId);
            var permissionId = Guid.Parse(model.PermissionId);

            if (_isEditMode && _selectedMapping != null)
            {
                var updateRequest = new UpdatePagePermissionMappingRequest
                    {
                        Id = _selectedMapping.Id,
                        PageId = pageId,
                        PermissionId = permissionId
                    };

                var response = await RBACService.UpdatePagePermissionMappingAsync(_selectedMapping.Id, updateRequest);
                if (response.Success)
                {
                    Snackbar.Add("Page permission mapping updated successfully", Severity.Success);
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to update page permission mapping", Severity.Error);
                }
            }
            else
            {
                var createRequest = new CreatePagePermissionMappingRequest
                    {
                        PageId = pageId,
                        PermissionId = permissionId
                    };

                var response = await RBACService.CreatePagePermissionMappingAsync(createRequest);
                if (response.Success)
                {
                    Snackbar.Add("Page permission mapping created successfully", Severity.Success);
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to create page permission mapping", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving page permission mapping");
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private async Task DeleteMapping(DisplayPagePermissionMapping mapping)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation",
                "Delete Page Permission Mapping",
                $"Are you sure you want to delete the mapping between page '{mapping.PageName}' and permission '{mapping.PermissionName}'? This action cannot be undone.");

            if (confirmed)
            {
                var response = await RBACService.DeletePagePermissionMappingAsync(mapping.Id);
                if (response.Success)
                {
                    Snackbar.Add("Page permission mapping deleted successfully", Severity.Success);
                    await LoadData();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to delete page permission mapping", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting page permission mapping");
            Snackbar.Add($"Error deleting page permission mapping: {ex.Message}", Severity.Error);
        }
    }
