@page "/role"
@using AuthManagement.Models
@using AuthManagement.Services
@using AuthManagement.Shared
@inject RBACService RBACService
@inject PermissionService PermissionService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<Role> Logger
@inject ISnackbar Snackbar
@attribute [Authorize]

<PageTitle>Role Management</PageTitle>

<style>
    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 0;
    }

    .page-title {
        font-size: 22px;
        font-weight: 600;
        color: #333;
        margin: 0;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 13px;
        color: #666;
        margin: 0;
        padding: 0;
        list-style: none;
    }

    .breadcrumb-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .breadcrumb-separator {
        color: #999;
    }

    .breadcrumb-link {
        color: #7c3aed;
        text-decoration: none;
    }

        .breadcrumb-link:hover {
            text-decoration: underline;
        }

    .breadcrumb-current {
        color: #666;
    }

    /* Container */
    .role-container {
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

    /* Toolbar */
    .toolbar-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 20px;
        background: white;
        border-bottom: 1px solid #f0f0f0;
        flex-wrap: wrap;
        gap: 16px;
    }

    .toolbar-left {
        display: flex;
        align-items: center;
    }

    .roles-list-label {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .toolbar-right {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-left: auto;
    }

    .search-box {
        position: relative;
        min-width: 280px;
    }

    .search-input {
        width: 100%;
        padding: 8px 12px 8px 36px;
        border: 1px solid #d9d9e3;
        border-radius: 6px;
        font-size: 14px;
    }

        .search-input:focus {
            outline: none;
            border-color: #7c3aed;
            box-shadow: 0 0 0 0.2rem rgba(124, 58, 237, 0.1);
        }

    .search-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
        font-size: 18px;
    }

    .add-button {
        background-color: #7c3aed;
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 6px;
        transition: background-color 0.2s;
        white-space: nowrap;
    }

        .add-button:hover {
            background-color: #6d28d9;
        }

        .add-button i {
            font-size: 18px;
        }

    /* Table */
    .role-table {
        width: 100%;
        border-collapse: collapse;
    }

        .role-table thead {
            background-color: #fafafa;
        }

        .role-table th {
            padding: 12px 16px;
            text-align: left;
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            user-select: none;
            color: black;
            background: white;
        }

            .role-table th:last-child {
                border-right: none;
            }

            .role-table th.sortable {
                position: relative;
                padding-right: 30px;
            }

        .role-table th.text-center {
            text-align: center;
        }

        .role-table tbody tr {
            transition: background-color 0.2s;
            border-bottom: 1px solid #f8f9fa;
        }

        .role-table td {
            padding: 10px 16px;
            font-size: 14px;
            color: #333;
        }

        .role-table tbody tr:last-child {
            border-bottom: none;
        }

    .serial-number {
        color: #666;
        font-weight: 500;
    }

    .role-name {
        color: #333;
        font-weight: 600;
    }

    .description-text {
        color: #666;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 6px;
        justify-content: center;
        align-items: center;
    }

    .action-btn {
        width: 32px;
        height: 32px;
        border: none;
        background: #f5f5f5;
        border-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        color: #666;
        font-size: 18px;
    }

        .action-btn i {
            font-size: 18px;
            display: block;
            line-height: 1;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        }

        .action-btn.view-btn {
            background-color: #e3f2fd;
            color: #2196f3;
        }

            .action-btn.view-btn:hover {
                background-color: #2196f3;
                color: white;
            }

        .action-btn.edit-btn {
            background-color: #fff3e0;
            color: #ff9800;
        }

            .action-btn.edit-btn:hover {
                background-color: #ff9800;
                color: white;
            }

        .action-btn.delete-btn {
            background-color: #ffebee;
            color: #f44336;
        }

            .action-btn.delete-btn:hover {
                background-color: #f44336;
                color: white;
            }

    /* Pagination */
    .pagination-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 20px;
        background: white;
        border-top: 1px solid #f0f0f0;
    }

    .pagination-info {
        font-size: 14px;
        color: #666;
    }

    .pagination-buttons {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .page-btn {
        min-width: 32px;
        height: 32px;
        padding: 0 8px;
        border: 1px solid #d9d9e3;
        background: white;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        color: #333;
        transition: all 0.2s;
    }

        .page-btn:hover:not(:disabled) {
            border-color: #7c3aed;
            color: #7c3aed;
        }

        .page-btn.active {
            background: #7c3aed;
            color: white;
            border-color: #7c3aed;
        }

        .page-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .ellipsis {
        padding: 0 8px;
        color: #999;
    }
</style>

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Page Header -->
    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />
    }
      else
    {
     <div class="page-header">
            <h1 class="page-title">Roles List</h1>
            <nav>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                       
                        <a href="#" class="breadcrumb-link">
                        <i class="ti tabler-home"></i>Home
                    </a>
                        <span class="breadcrumb-separator">></span>
                    </li>
                    <li class="">
                    <span class="breadcrumb-current">Roles</span>
                    </li>
                </ul>
            </nav>
        </div>


    <!-- Card Container -->
    <div class="role-container">
        <!-- Toolbar -->
        <div class="toolbar-container">
            <div class="toolbar-left">
                <span class="roles-list-label">Roles List</span>
            </div>
            <div class="toolbar-right">
                <div class="search-box">
                    <i class="ti tabler-search search-icon"></i>
                    <input type="text" class="search-input" placeholder="Search roles..."
                           @bind-value="_searchString" @bind-value:event="oninput"
                           @onkeyup="@(() => OnSearchChanged(_searchString))" />
                </div>
                @if (_canAdd)
                {
                    <button class="add-button" @onclick="OpenAddDialog">
                        <i class="ti tabler-plus"></i>
                        <span>Add Role</span>
                    </button>
                }
            </div>
        </div>

        <!-- Table -->
        @if (_isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading roles...</p>
            </div>
        }
        else if (_hasError)
        {
            <div class="alert alert-danger m-3" role="alert">
                <i class="ti tabler-alert-circle me-2"></i>@_errorMessage
            </div>
        }
        else if (_pagedRoles != null && _pagedRoles.Any())
        {
            <table class="role-table">
                <thead>
                    <tr>
                            <th class="plusHeading"></th>

                        <th style="width: 80px;">No.</th>
                        <th @onclick="@(() => ToggleSort("department"))">Department</th>
                        <th @onclick="@(() => ToggleSort("name"))">Role Name</th>
                        <th @onclick="@(() => ToggleSort("description"))">Description</th>
                        <th class="text-center" style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in _pagedRoles)
                    {
                        <tr>
                                <td class="details-control" @onclick="@(() => ShowDetails(role))">
                                    <div class="plus" style="border-radius: 50%;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        box-sizing: content-box;
                        border: 2px solid var(--bs-paper-bg);
                        background-color: var(--bs-primary);
                        block-size: .85rem;
                        box-shadow: 0 0 3px var(--bs-gray-800);
                        color: var(--bs-white);    width: 17px;
            height: 17px;">
                                        <i class="ti tabler-plus"></i>
                                    </div>
                                </td>

                            <td class="serial-number">@GetGlobalSerialNumber(role)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(role.DepartmentName))
                                {
                                    <span class="rounded-pill @(role.DepartmentName == "Finance" ? "bg-primary-gradient" : "bg-secondary-gradient")">
                                        @role.DepartmentName
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Global</span>
                                }
                            </td>
                            <td class="role-name">@role.Name</td>
                            <td class="description-text">@TruncateDescription(role.Description)</td>
                            <td>
                                <div class="action-buttons">
                                    @if (_canView)
                                    {
                                        <button class="action-btn view-btn" @onclick="@(() => OpenViewDialog(role))" title="View">
                                            <i class="ti tabler-eye"></i>
                                        </button>
                                    }
                                    @if (_canEdit)
                                    {
                                        <button class="action-btn edit-btn" @onclick="@(() => OpenEditDialog(role))" title="Edit">
                                            <i class="ti tabler-edit"></i>
                                        </button>
                                    }
                                    @if (_canDelete)
                                    {
                                        <button class="action-btn delete-btn" @onclick="@(() => DeleteRole(role))" title="Delete">
                                            <i class="ti tabler-trash"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="pagination-container">
                <div class="pagination-info">
                    Showing @GetStartRecord() to @GetEndRecord() of @_totalItems entries
                </div>
                <div class="pagination-buttons">
                    <button class="page-btn" @onclick="@(() => GoToPage(1))" disabled="@(_currentPage == 1)">
                        <i class="ti tabler-chevrons-left"></i>
                    </button>
                    <button class="page-btn" @onclick="@(() => GoToPage(_currentPage - 1))" disabled="@(_currentPage == 1)">
                        <i class="ti tabler-chevron-left"></i>
                    </button>

                    @if (GetStartPage() > 1)
                    {
                        <span class="ellipsis">...</span>
                    }

                    @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                    {
                        var pageNum = i;
                        <button class="page-btn @(pageNum == _currentPage ? "active" : "")"
                                @onclick="@(() => GoToPage(pageNum))">
                            @pageNum
                        </button>
                    }

                    @if (GetEndPage() < _totalPages)
                    {
                        <span class="ellipsis">...</span>
                    }

                    <button class="page-btn" @onclick="@(() => GoToPage(_currentPage + 1))" disabled="@(_currentPage >= _totalPages)">
                        <i class="ti tabler-chevron-right"></i>
                    </button>
                    <button class="page-btn" @onclick="@(() => GoToPage(_totalPages))" disabled="@(_currentPage >= _totalPages)">
                        <i class="ti tabler-chevrons-right"></i>
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info m-3" role="alert">
                <i class="ti tabler-info-circle me-2"></i>No roles found.
            </div>
        }
    </div>
    }
</div>

