<div class="page-header mb-3">
    <div>
        <h4 class="page-title">User Role Mapping</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/" class="breadcrumb-link">
                        <i class="ti tabler-home"></i> Home
                    </a>
                    <span class="breadcrumb-separator">/</span>
                </li>
                <li class="breadcrumb-item breadcrumb-current">User Role Mapping</li>
            </ol>
        </nav>
    </div>
</div>

<div class="mapping-container">
    <!-- Toolbar -->
    <div class="toolbar-container">
        <div class="toolbar-left">
            <span class="mappings-list-label">User Role Mappings List</span>
        </div>
        <div class="toolbar-right">
            <div class="search-box">
                <i class="ti tabler-search search-icon"></i>
                <input type="text" 
                       class="search-input" 
                       placeholder="Search by user email or role name..."
                       @bind-value="_searchString" 
                       @bind-value:event="oninput"
                       @onchange="@(() => OnSearchChanged(_searchString))" />
            </div>
            @if (_canCreate)
            {
                <button class="add-button" @onclick="OpenAddDialog">
                    <i class="ti tabler-plus"></i>
                    <span>Add Mapping</span>
                </button>
            }
        </div>
    </div>

    <!-- Table -->
    @if (_isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 mb-0">Loading user role mappings...</p>
        </div>
    }
    else if (_hasError)
    {
        <div class="error-container">
            <i class="ti tabler-alert-circle" style="font-size: 64px; color: #f44336;"></i>
            <h5 class="mt-3">Error Loading Data</h5>
            <p>@_errorMessage</p>
        </div>
    }
    else if (_pagedMappings != null && _pagedMappings.Any())
    {
        <table class="mapping-table">
            <thead>
                <tr>
                    <th @onclick="@(() => ToggleSort("no"))" class="sortable">
                        No.
                        <span class="sort-indicator">
                            <span class="sort-arrow up @(_sortColumn == "no" && _sortDirection == "asc" ? "active" : "")"></span>
                            <span class="sort-arrow down @(_sortColumn == "no" && _sortDirection == "desc" ? "active" : "")"></span>
                        </span>
                    </th>
                    <th @onclick="@(() => ToggleSort("user"))" class="sortable">
                        User Name (Email)
                        <span class="sort-indicator">
                            <span class="sort-arrow up @(_sortColumn == "user" && _sortDirection == "asc" ? "active" : "")"></span>
                            <span class="sort-arrow down @(_sortColumn == "user" && _sortDirection == "desc" ? "active" : "")"></span>
                        </span>
                    </th>
                    <th @onclick="@(() => ToggleSort("role"))" class="sortable">
                        Role Name
                        <span class="sort-indicator">
                            <span class="sort-arrow up @(_sortColumn == "role" && _sortDirection == "asc" ? "active" : "")"></span>
                            <span class="sort-arrow down @(_sortColumn == "role" && _sortDirection == "desc" ? "active" : "")"></span>
                        </span>
                    </th>
                    <th @onclick="@(() => ToggleSort("department"))" class="sortable">
                        Department Name
                        <span class="sort-indicator">
                            <span class="sort-arrow up @(_sortColumn == "department" && _sortDirection == "asc" ? "active" : "")"></span>
                            <span class="sort-arrow down @(_sortColumn == "department" && _sortDirection == "desc" ? "active" : "")"></span>
                        </span>
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mapping in _pagedMappings)
                {
                    <tr>
                        <td class="serial-number">@GetGlobalSerialNumber(mapping)</td>
                        <td class="user-email">@mapping.UserEmail</td>
                        <td class="role-name">@mapping.RoleName</td>
                        <td>
                            @if (!string.IsNullOrEmpty(mapping.DepartmentName))
                            {
                                <span class="department-badge">@mapping.DepartmentName</span>
                            }
                            else
                            {
                                <span class="no-department-badge">No Department</span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                @if (_canView)
                                {
                                    <button class="action-btn view-btn" 
                                            @onclick="@(() => OpenViewDialog(mapping))"
                                            title="View">
                                        <i class="ti tabler-eye"></i>
                                    </button>
                                }
                                @if (_canEdit)
                                {
                                    <button class="action-btn edit-btn" 
                                            @onclick="@(() => OpenEditDialog(mapping))"
                                            title="Edit">
                                        <i class="ti tabler-pencil"></i>
                                    </button>
                                }
                                @if (_canDelete)
                                {
                                    <button class="action-btn delete-btn" 
                                            @onclick="@(() => DeleteMapping(mapping))"
                                            title="Delete">
                                        <i class="ti tabler-trash"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pagination -->
        <div class="pagination-container">
            <div class="pagination-info">
                Showing @GetStartRecord() to @GetEndRecord() of @_totalItems entries
            </div>
            <div class="pagination-controls">
                <div class="page-size-container">
                    <label>Show</label>
                    <select class="page-size-select" @bind="_pageSize" @bind:after="UpdateFilteredMappings">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <label>entries</label>
                </div>
                <div class="pagination-buttons">
                    <button class="pagination-btn" @onclick="@(() => GoToPage(1))" disabled="@(_currentPage == 1)">
                        <i class="ti tabler-chevrons-left"></i>
                    </button>
                    <button class="pagination-btn" @onclick="@(() => GoToPage(_currentPage - 1))" disabled="@(_currentPage == 1)">
                        <i class="ti tabler-chevron-left"></i>
                    </button>
                    
                    @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                    {
                        var pageNumber = i;
                        <button class="pagination-btn @(_currentPage == pageNumber ? "active" : "")" 
                                @onclick="@(() => GoToPage(pageNumber))">
                            @pageNumber
                        </button>
                    }
                    
                    <button class="pagination-btn" @onclick="@(() => GoToPage(_currentPage + 1))" disabled="@(_currentPage == _totalPages)">
                        <i class="ti tabler-chevron-right"></i>
                    </button>
                    <button class="pagination-btn" @onclick="@(() => GoToPage(_totalPages))" disabled="@(_currentPage == _totalPages)">
                        <i class="ti tabler-chevrons-right"></i>
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="ti tabler-database-off"></i>
            <h5>No User Role Mappings Found</h5>
            <p>There are no user role mappings to display.</p>
        </div>
    }
</div>

<!-- Form Dialog Component -->
<UserRoleMappingFormDialog IsOpen="_isDialogOpen"
                           IsEditMode="_isEditMode"
                           IsSaving="_isSaving"
                           FormModel="_mappingModel"
                           Departments="_departments"
                           Users="_users"
                           Roles="_filteredRoles"
                           OnCancel="CloseDialog"
                           OnSubmit="HandleSubmit"
                           OnDepartmentChanged="OnDepartmentChanged" />

<!-- Details Offcanvas Component -->
<UserRoleMappingDetailsOffcanvas IsOpen="_isOffcanvasOpen"
                                 Mapping="_selectedMapping"
                                 OnClose="CloseOffcanvas" />

@code {
    private List<UserRoleMappingDto> _mappings = new();
    private List<UserRoleMappingDto> _filteredMappings = new();
    private List<UserRoleMappingDto> _pagedMappings = new();
    private List<DepartmentDto> _departments = new();
    private List<UserDto> _users = new();
    private List<RoleDto> _roles = new();
    private List<RoleDto> _filteredRoles = new();
    
    private UserRoleMappingDto? _selectedMapping;
    private UserRoleMappingFormDialog.MappingFormModel _mappingModel = new();
    
    private bool _isLoading = true;
    private bool _hasError = false;
    private string _errorMessage = string.Empty;
    private bool _isOffcanvasOpen = false;
    private bool _isDialogOpen = false;
    private bool _isEditMode = false;
    private bool _isSaving = false;
    
    private bool _canView = false;
    private bool _canCreate = false;
    private bool _canEdit = false;
    private bool _canDelete = false;
    
    private string _searchString = string.Empty;
    private string _sortColumn = "user";
    private string _sortDirection = "asc";
    private int _currentPage = 1;
    private int _pageSize = 10;
    private int _totalItems = 0;
    private int _totalPages = 1;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true)
            {
                NavigationManager.NavigateTo("/login");
                return;
            }

            var permissions = await PermissionService.GetPagePermissionsAsync("/userrolemapping");
            _canView = permissions.CanView;
            _canCreate = permissions.CanAdd;
            _canEdit = permissions.CanEdit;
            _canDelete = permissions.CanDelete;

            Logger.LogInformation("Permissions set - View: {View}, Add: {Add}, Edit: {Edit}, Delete: {Delete}",
                _canView, _canCreate, _canEdit, _canDelete);

            await LoadData();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing UserRoleMapping page");
            _hasError = true;
            _errorMessage = $"Error initializing page: {ex.Message}";
            _isLoading = false;
        }
    }

    private async Task LoadData()
    {
        _isLoading = true;
        _hasError = false;

        try
        {
            var mappingsTask = RBACService.GetAllUserRoleMappingsAsync();
            var departmentsTask = RBACService.GetAllDepartmentsAsync();
            var usersTask = RBACService.GetAllUsersAsync();
            var rolesTask = RBACService.GetAllRolesAsync();

            await Task.WhenAll(mappingsTask, departmentsTask, usersTask, rolesTask);

            var mappingsResponse = await mappingsTask;
            var departmentsResponse = await departmentsTask;
            var usersResponse = await usersTask;
            var rolesResponse = await rolesTask;

            if (mappingsResponse.Success && mappingsResponse.Data != null)
            {
                _mappings = mappingsResponse.Data;
                Logger.LogInformation("Loaded {Count} user role mappings", _mappings.Count);
            }
            else
            {
                _hasError = true;
                _errorMessage = mappingsResponse.Message ?? "Failed to load user role mappings";
            }

            if (departmentsResponse.Success && departmentsResponse.Data != null)
            {
                _departments = departmentsResponse.Data;
            }

            if (usersResponse.Success && usersResponse.Data != null)
            {
                _users = usersResponse.Data;
            }

            if (rolesResponse.Success && rolesResponse.Data != null)
            {
                _roles = rolesResponse.Data;
            }

            UpdateFilteredMappings();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading data");
            _hasError = true;
            _errorMessage = $"Error loading data: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void UpdateFilteredMappings()
    {
        // Filter
        if (string.IsNullOrWhiteSpace(_searchString))
        {
            _filteredMappings = _mappings.ToList();
        }
        else
        {
            _filteredMappings = _mappings
                .Where(m => FilterFunc(m))
                .ToList();
        }

        // Sort
        _filteredMappings = (_sortColumn, _sortDirection) switch
        {
            ("no", "asc") => _filteredMappings.OrderBy(m => _mappings.IndexOf(m)).ToList(),
            ("no", "desc") => _filteredMappings.OrderByDescending(m => _mappings.IndexOf(m)).ToList(),
            ("user", "asc") => _filteredMappings.OrderBy(m => m.UserEmail).ToList(),
            ("user", "desc") => _filteredMappings.OrderByDescending(m => m.UserEmail).ToList(),
            ("role", "asc") => _filteredMappings.OrderBy(m => m.RoleName).ToList(),
            ("role", "desc") => _filteredMappings.OrderByDescending(m => m.RoleName).ToList(),
            ("department", "asc") => _filteredMappings.OrderBy(m => m.DepartmentName ?? string.Empty).ToList(),
            ("department", "desc") => _filteredMappings.OrderByDescending(m => m.DepartmentName ?? string.Empty).ToList(),
            _ => _filteredMappings.OrderBy(m => m.UserEmail).ToList()
        };

        _totalItems = _filteredMappings.Count;
        _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;

        if (_currentPage > _totalPages)
        {
            _currentPage = _totalPages;
        }
        if (_currentPage < 1)
        {
            _currentPage = 1;
        }

        _pagedMappings = _filteredMappings
            .Skip((_currentPage - 1) * _pageSize)
            .Take(_pageSize)
            .ToList();
    }

    private void OnSearchChanged(string value)
    {
        _searchString = value;
        _currentPage = 1;
        UpdateFilteredMappings();
        StateHasChanged();
    }

    private void ToggleSort(string column)
    {
        if (_sortColumn == column)
        {
            _sortDirection = _sortDirection == "asc" ? "desc" : "asc";
        }
        else
        {
            _sortColumn = column;
            _sortDirection = "asc";
        }
        UpdateFilteredMappings();
        StateHasChanged();
    }

    private bool FilterFunc(UserRoleMappingDto mapping)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        var searchLower = _searchString.ToLower();
        return mapping.UserEmail.ToLower().Contains(searchLower) ||
               mapping.RoleName.ToLower().Contains(searchLower) ||
               (mapping.DepartmentName?.ToLower().Contains(searchLower) ?? false);
    }

    private int GetGlobalSerialNumber(UserRoleMappingDto mapping)
    {
        var index = _filteredMappings.IndexOf(mapping);
        return index + 1;
    }

    private int GetStartRecord()
    {
        return _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    }

    private int GetEndRecord()
    {
        return Math.Min(_currentPage * _pageSize, _totalItems);
    }

    private int GetStartPage()
    {
        return Math.Max(1, _currentPage - 2);
    }

    private int GetEndPage()
    {
        return Math.Min(_totalPages, _currentPage + 2);
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= _totalPages)
        {
            _currentPage = page;
            UpdateFilteredMappings();
            StateHasChanged();
        }
    }

    private void OpenAddDialog()
    {
        _selectedMapping = null;
        _isEditMode = false;
        _mappingModel = new UserRoleMappingFormDialog.MappingFormModel();
        _filteredRoles = new List<RoleDto>();
        _isDialogOpen = true;
    }

    private void OpenEditDialog(UserRoleMappingDto mapping)
    {
        _selectedMapping = mapping;
        _isEditMode = true;
        _mappingModel = new UserRoleMappingFormDialog.MappingFormModel
        {
            UserId = mapping.UserId.ToString(),
            RoleId = mapping.RoleId.ToString(),
            DepartmentId = mapping.DepartmentId?.ToString() ?? ""
        };
        
        // Load filtered roles for the selected department
        if (!string.IsNullOrEmpty(_mappingModel.DepartmentId))
        {
            var departmentId = Guid.Parse(_mappingModel.DepartmentId);
            _filteredRoles = _roles.Where(r => r.DepartmentId == departmentId).ToList();
        }
        
        _isDialogOpen = true;
    }

    private void OpenViewDialog(UserRoleMappingDto mapping)
    {
        _selectedMapping = mapping;
        _isOffcanvasOpen = true;
    }

    private void CloseDialog()
    {
        _isDialogOpen = false;
        _selectedMapping = null;
        _mappingModel = new UserRoleMappingFormDialog.MappingFormModel();
        _isEditMode = false;
        _filteredRoles = new List<RoleDto>();
    }

    private void CloseOffcanvas()
    {
        _isOffcanvasOpen = false;
        _selectedMapping = null;
    }

    private void OnDepartmentChanged(string departmentId)
    {
        if (!string.IsNullOrEmpty(departmentId))
        {
            var deptId = Guid.Parse(departmentId);
            _filteredRoles = _roles.Where(r => r.DepartmentId == deptId).ToList();
        }
        else
        {
            _filteredRoles = new List<RoleDto>();
        }
        
        // Reset role selection when department changes
        _mappingModel.RoleId = string.Empty;
        StateHasChanged();
    }

    private async Task HandleSubmit(UserRoleMappingFormDialog.MappingFormModel model)
    {
        _isSaving = true;
        try
        {
            var userId = Guid.Parse(model.UserId);
            var roleId = Guid.Parse(model.RoleId);
            var departmentId = Guid.Parse(model.DepartmentId);

            // Get current user email for AssignedByEmail
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var currentUserEmail = authState.User.Identity?.Name ?? "";

            if (_isEditMode && _selectedMapping != null)
            {
                var updateRequest = new UpdateUserRoleMappingRequest
                {
                    Id = _selectedMapping.Id,
                    UserId = userId,
                    RoleId = roleId,
                    DepartmentId = departmentId,
                    AssignedByEmail = currentUserEmail
                };

                var response = await RBACService.UpdateUserRoleMappingAsync(_selectedMapping.Id, updateRequest);
                if (response.Success)
                {
                    Snackbar.Add("User role mapping updated successfully", Severity.Success);
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to update user role mapping", Severity.Error);
                }
            }
            else
            {
                var createRequest = new CreateUserRoleMappingRequest
                {
                    UserId = userId,
                    RoleId = roleId,
                    DepartmentId = departmentId,
                    AssignedByEmail = currentUserEmail
                };

                var response = await RBACService.CreateUserRoleMappingAsync(createRequest);
                if (response.Success)
                {
                    Snackbar.Add("User role mapping created successfully", Severity.Success);
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to create user role mapping", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving user role mapping");
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private async Task DeleteMapping(UserRoleMappingDto mapping)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation",
                "Delete User Role Mapping",
                $"Are you sure you want to delete the mapping for user '{mapping.UserEmail}' with role '{mapping.RoleName}'? This action cannot be undone.");

            if (confirmed)
            {
                var response = await RBACService.DeleteUserRoleMappingAsync(mapping.Id);
                if (response.Success)
                {
                    Snackbar.Add("User role mapping deleted successfully", Severity.Success);
                    await LoadData();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to delete user role mapping", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting user role mapping");
            Snackbar.Add($"Error deleting user role mapping: {ex.Message}", Severity.Error);
        }
    }
