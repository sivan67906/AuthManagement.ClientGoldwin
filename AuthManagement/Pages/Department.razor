@code {
    private List<DepartmentDto> _departments = new();
    private List<DepartmentDto> _filteredDepartments = new();
    private List<DepartmentDto> _pagedDepartments = new();
    private DepartmentDto? _selectedDepartment;
    private DepartmentFormDialog.DepartmentFormModel _departmentModel = new();
    private bool _isLoading = true;
    private bool _isSaving = false;
    private bool _isDialogOpen = false;
    private bool _isOffcanvasOpen = false;
    private bool _isEditMode = false;
    private bool _hasError = false;
    private string _errorMessage = string.Empty;
    private string _searchString = string.Empty;
    private string _sortColumn = "name";
    private string _sortDirection = "asc";

    // Pagination
    private int _currentPage = 1;
    private int _pageSize = 10;
    private int _totalPages = 1;
    private int _totalItems = 0;

    // Permission flags
    private bool _canView = false;
    private bool _canAdd = false;
    private bool _canEdit = false;
    private bool _canDelete = false;


     bool showPopup = false;
    DepartmentDto? selectedFeature;

    void closeSelectFeatures()
    {
        showPopup=false;
    }

    void ShowDetails(DepartmentDto feature)
    {
        selectedFeature = feature;
        showPopup = true;
    }

    void ClosePopup()
    {
        showPopup = false;
    }



    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInformation("Department page initializing...");

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true)
            {
                Logger.LogWarning("User not authenticated, redirecting to login");
                NavigationManager.NavigateTo("/login");
                return;
            }

            var permissions = await PermissionService.GetPagePermissionsAsync("/department");
            _canView = permissions.CanView;
            _canAdd = permissions.CanAdd;
            _canEdit = permissions.CanEdit;
            _canDelete = permissions.CanDelete;

            Logger.LogInformation("Permissions set - View: {View}, Add: {Add}, Edit: {Edit}, Delete: {Delete}",
                _canView, _canAdd, _canEdit, _canDelete);

            await LoadDepartments();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing Department page");
            _hasError = true;
            _errorMessage = $"Error initializing page: {ex.Message}";
            _isLoading = false;
        }
    }

    private async Task LoadDepartments()
    {
        _isLoading = true;
        _hasError = false;

        try
        {
            Logger.LogInformation("Loading departments...");
            var response = await RBACService.GetAllDepartmentsAsync();

            if (response.Success && response.Data != null)
            {
                _departments = response.Data;
                Logger.LogInformation("Loaded {Count} departments", _departments.Count);
                UpdateFilteredDepartments();
            }
            else
            {
                _hasError = true;
                _errorMessage = response.Message ?? "Failed to load departments";
                Logger.LogWarning("Failed to load departments: {Message}", _errorMessage);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading departments");
            _hasError = true;
            _errorMessage = $"Error loading departments: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void UpdateFilteredDepartments()
    {
        // Filter
        if (string.IsNullOrWhiteSpace(_searchString))
        {
            _filteredDepartments = _departments.ToList();
        }
        else
        {
            _filteredDepartments = _departments
                .Where(d => FilterFunc(d))
                .ToList();
        }

        // Sort - Fixed: Removed invalid lambda syntax with two parameters
        _filteredDepartments = (_sortColumn, _sortDirection) switch
        {
            ("no", "asc") => _filteredDepartments.OrderBy(d => _departments.IndexOf(d)).ToList(),
            ("no", "desc") => _filteredDepartments.OrderByDescending(d => _departments.IndexOf(d)).ToList(),
            ("name", "asc") => _filteredDepartments.OrderBy(d => d.Name).ToList(),
            ("name", "desc") => _filteredDepartments.OrderByDescending(d => d.Name).ToList(),
            ("description", "asc") => _filteredDepartments.OrderBy(d => d.Description ?? string.Empty).ToList(),
            ("description", "desc") => _filteredDepartments.OrderByDescending(d => d.Description ?? string.Empty).ToList(),
            _ => _filteredDepartments.OrderBy(d => d.Name).ToList()
        };

        _totalItems = _filteredDepartments.Count;
        _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;

        if (_currentPage > _totalPages)
        {
            _currentPage = _totalPages;
        }
        if (_currentPage < 1)
        {
            _currentPage = 1;
        }

        _pagedDepartments = _filteredDepartments
            .Skip((_currentPage - 1) * _pageSize)
            .Take(_pageSize)
            .ToList();
    }

    private void OnSearchChanged(string value)
    {
        _searchString = value;
        _currentPage = 1;
        UpdateFilteredDepartments();
        StateHasChanged();
    }

    private void ToggleSort(string column)
    {
        if (_sortColumn == column)
        {
            _sortDirection = _sortDirection == "asc" ? "desc" : "asc";
        }
        else
        {
            _sortColumn = column;
            _sortDirection = "asc";
        }
        UpdateFilteredDepartments();
        StateHasChanged();
    }

    private bool FilterFunc(DepartmentDto department)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        var searchLower = _searchString.ToLower();
        return department.Name.ToLower().Contains(searchLower) ||
               (department.Description?.ToLower().Contains(searchLower) ?? false);
    }

    private int GetGlobalSerialNumber(DepartmentDto department)
    {
        var index = _filteredDepartments.IndexOf(department);
        return index + 1;
    }

    private string TruncateDescription(string? description)
    {
        if (string.IsNullOrEmpty(description))
            return "-";

        if (description.Length <= 50)
            return description;

        return description.Substring(0, 50) + "...";
    }

    private int GetStartRecord()
    {
        return _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    }

    private int GetEndRecord()
    {
        return Math.Min(_currentPage * _pageSize, _totalItems);
    }

    private int GetStartPage()
    {
        return Math.Max(1, _currentPage - 2);
    }

    private int GetEndPage()
    {
        return Math.Min(_totalPages, _currentPage + 2);
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= _totalPages)
        {
            _currentPage = page;
            UpdateFilteredDepartments();
            StateHasChanged();
        }
    }

    private void OpenAddDialog()
    {
        _selectedDepartment = null;
        _isEditMode = false;
        _departmentModel = new DepartmentFormDialog.DepartmentFormModel();
        _isDialogOpen = true;
    }

    private void OpenEditDialog(DepartmentDto department)
    {
        _selectedDepartment = department;
        _isEditMode = true;
        _departmentModel = new DepartmentFormDialog.DepartmentFormModel
            {
                Name = department.Name,
                Description = department.Description
            };
        _isDialogOpen = true;
    }

    private void OpenViewDialog(DepartmentDto department)
    {
        _selectedDepartment = department;
        _isOffcanvasOpen = true;
    }

    private void CloseDialog()
    {
        _isDialogOpen = false;
        _selectedDepartment = null;
        _departmentModel = new DepartmentFormDialog.DepartmentFormModel();
        _isEditMode = false;
    }

    private void CloseOffcanvas()
    {
        _isOffcanvasOpen = false;
        _selectedDepartment = null;
    }

    private async Task HandleSubmit(DepartmentFormDialog.DepartmentFormModel model)
    {
        _isSaving = true;
        try
        {
            if (_isEditMode && _selectedDepartment != null)
            {
                var updateRequest = new UpdateDepartmentRequest
                    {
                        Id = _selectedDepartment.Id,
                        Name = model.Name,
                        Description = model.Description
                    };

                var response = await RBACService.UpdateDepartmentAsync(_selectedDepartment.Id, updateRequest);
                if (response.Success)
                {
                    Snackbar.Add("Department updated successfully", Severity.Success);
                    await LoadDepartments();
                    CloseDialog();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to update department", Severity.Error);
                }
            }
            else
            {
                var createRequest = new CreateDepartmentRequest
                    {
                        Name = model.Name,
                        Description = model.Description
                    };

                var response = await RBACService.CreateDepartmentAsync(createRequest);
                if (response.Success)
                {
                    Snackbar.Add("Department created successfully", Severity.Success);
                    await LoadDepartments();
                    CloseDialog();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to create department", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving department");
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private async Task DeleteDepartment(DepartmentDto department)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation",
                "Delete Department",
                $"Are you sure you want to delete '{department.Name}'? This action cannot be undone.");

            if (confirmed)
            {
                var response = await RBACService.DeleteDepartmentAsync(department.Id);
                if (response.Success)
                {
                    Snackbar.Add("Department deleted successfully", Severity.Success);
                    await LoadDepartments();
                }
                else
                {
                    Snackbar.Add(response.Message ?? "Failed to delete department", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting department");
            Snackbar.Add($"Error deleting department: {ex.Message}", Severity.Error);
        }
    }
